<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/aluminium_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.4">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/display_glas"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MINUS"
                        android:textColor="@color/colorWhiteGrey"/>

                    <ImageView
                        android:id="@+id/iv_minus_lamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="20dp"
                        android:paddingTop="5dp"
                        android:visibility="invisible"
                        android:src="@drawable/amber"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MEMORY"
                        android:textColor="@color/colorWhiteGrey"/>

                    <ImageView
                        android:id="@+id/iv_memory_lamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="20dp"
                        android:paddingTop="5dp"
                        android:visibility="invisible"
                        android:src="@drawable/amber"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ERROR"
                        android:textColor="@color/colorWhiteGrey"/>

                    <ImageView
                        android:id="@+id/iv_error_lamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="20dp"
                        android:paddingTop="5dp"
                        android:visibility="invisible"
                        android:src="@drawable/amber"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_d7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/dn" />

                        <ImageView
                            android:id="@+id/iv_dec7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|bottom"
                            android:visibility="invisible"
                            android:src="@drawable/amber" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_d6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/dn"/>

                        <ImageView
                            android:id="@+id/iv_dec6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|bottom"
                            android:visibility="invisible"
                            android:src="@drawable/amber" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_d5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/dn"/>

                        <ImageView
                            android:id="@+id/iv_dec5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|bottom"
                            android:visibility="invisible"
                            android:src="@drawable/amber" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_d4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/dn"/>

                        <ImageView
                            android:id="@+id/iv_dec4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|bottom"
                            android:visibility="invisible"
                            android:src="@drawable/amber" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_d3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/dn"/>

                        <ImageView
                            android:id="@+id/iv_dec3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|bottom"
                            android:visibility="invisible"
                            android:src="@drawable/amber" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_d2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/dn"/>

                        <ImageView
                            android:id="@+id/iv_dec2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|bottom"
                            android:visibility="invisible"
                            android:src="@drawable/amber" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_d1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/dn"/>

                        <ImageView
                            android:id="@+id/iv_dec1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|bottom"
                            android:visibility="invisible"
                            android:src="@drawable/amber" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_d0"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/dn"/>

                        <ImageView
                            android:id="@+id/iv_dec0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|bottom"
                            android:src="@drawable/amber" />
                    </FrameLayout>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="4">

                // 1 line buttons
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/func_button1"/>

                        <TextView
                            android:id="@+id/bt_mc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FunctionalButtons"
                            android:text="MC"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_mr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/func_button1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FunctionalButtons"
                            android:text="MR"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_m_minus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/func_button1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FunctionalButtons"
                            android:text="M-"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_m_plus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/func_button1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FunctionalButtons"
                            android:text="M+"/>

                    </FrameLayout>
                </LinearLayout>

                // 2 line buttons
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/bt_ac"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/func_button2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FunctionalButtons"
                            android:text="AC"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_c"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/func_button1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FunctionalButtons"
                            android:text="C"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_sqr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/func_button1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FunctionalButtons"
                            android:text="√"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_procent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/func_button1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FunctionalButtons"
                            android:text="%"/>

                    </FrameLayout>
                </LinearLayout>

                // 3 line buttons
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/bt_7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/black_button1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/NumbersButtons"
                            android:text="7"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/black_button1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/NumbersButtons"
                            android:text="8"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/black_button1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/NumbersButtons"
                            android:text="9"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_dev"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/black_button2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/NumbersButtons"
                            android:text="÷"/>

                    </FrameLayout>
                </LinearLayout>

                // 4 line buttons
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/bt_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/black_button1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/NumbersButtons"
                            android:text="4"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/black_button1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/NumbersButtons"
                            android:text="5"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/black_button1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/NumbersButtons"
                            android:text="6"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_mult"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/black_button2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/NumbersButtons"
                            android:text="x"/>

                    </FrameLayout>
                </LinearLayout>

                // 5 line buttons
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/bt_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/black_button1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/NumbersButtons"
                            android:text="1"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/black_button1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/NumbersButtons"
                            android:text="2"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/black_button1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/NumbersButtons"
                            android:text="3"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_minus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/black_button2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/NumbersButtons"
                            android:text="-"/>

                    </FrameLayout>
                </LinearLayout>

                // 6 line buttons

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/bt_0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/black_button1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/NumbersButtons"
                            android:text="0"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_dot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/black_button1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/NumbersButtons"
                            android:text="."/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_equal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/black_button2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/NumbersButtons"
                            android:text="="/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_plus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/buttonsPadding">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/black_button2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/NumbersButtons"
                            android:text="+"/>

                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</layout>